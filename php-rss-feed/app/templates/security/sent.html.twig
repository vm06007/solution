{% extends 'base.html.twig' %}
{%  block title %}Recovery message sent{% endblock %}
{%  block stylesheets %}{{ encore_entry_link_tags('index') }}{% endblock %}
{% block body %}
    <div class="d-md-flex align-items-center h-md-100 p-5 justify-content-center">
        <div class="border rounded p-5">
            {% if error == '' %}
                <h4 class="mb-4 text-center">Successful</h4>
                <p>Email with password restore data sent to <b>{{ last_username }}</b>.</p>
            {% else %}
                <h4 class="mb-4 text-center">Error!</h4>
                <p>Username <b>{{ last_username }}</b> not found.</p>
            {% endif %}
        </div>
    </div>
{% endblock %}