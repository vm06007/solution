{% extends 'base.html.twig' %}
{%  block title %}Restore password{% endblock %}
{%  block stylesheets %}{{ encore_entry_link_tags('index') }}{% endblock %}
{% block body %}
    <div class="d-md-flex align-items-center h-md-100 p-5 justify-content-center">
        <div class="border rounded p-5 bg-white col-6">
            <h4 class="mb-4 text-center">Recover your password</h4>
            <form method="post">
                <div class="panel-forgot">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12">
                            <form name="forgetForm" class="forgetForm" action="#" method="POST">
                                <div class="input-group mb-4">
                                    <div class="input-group-prepend">
                                    <span class="input-group-text"
                                      id="basic-addon-audit-followers-min">Email</span>
                                    </div>
                                    <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email" required>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn btn-primary btn-block" type="submit">Recover your password</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}